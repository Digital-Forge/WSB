@model SystemOfBookHotel.Application.ViewModel.PaymentVm

@{
    ViewData["Title"] = "Payment";
}

<div id="booking" class="section">
    <div class="section-center">
        <div class="container">
            <div class="row">
                <div class="booking-form">
                    <div class="form-header-1">
                        <h1>DO ZAPŁATY: @Model.Price @Model.Currency</h1>
                    </div>
                    <form asp-action="EndReservation">
                        <div class="row justify-content-center">
                            <div class="col-2">
                                <div class="counter">@Model.Price</div>
                            </div>
                            <div class="col-6">
                                <div class="form-btn"> <button class="submit-btn">ZATWIERDŹ</button> </div>
                            </div>
                            <input asp-for="Email" type ="hidden" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
